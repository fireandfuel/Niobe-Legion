<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
	fx:controller="cuina.legion.client.gui.connect.ReconnectController" minWidth="400" minHeight="150">
	<center>
		<VBox fillWidth="false" alignment="CENTER" spacing="15.0">
			<ProgressIndicator fx:id="progress" progress="-1.0" />
			<Label fx:id="progressLabel" text="Verbindung mit Server wird hergestellt ..." />
		</VBox>
	</center>
	<bottom>
		<HBox alignment="BOTTOM_RIGHT" spacing="15.0">
				<Button onAction="#cancel" text="Abbrechen" />
			</HBox>
	</bottom>
</BorderPane>

