<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.CheckBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="niobe.legion.client.gui.admin.GroupEditorController">
    <center>
        <GridPane vgap="5.0" hgap="5.0">
            <children>
                <Label text="Gruppenname:" GridPane.rowIndex="0"
                       GridPane.columnIndex="0"/>
                <TextField fx:id="groupName" GridPane.rowIndex="0"
                           GridPane.columnIndex="1"/>
                <Label text="Gruppe aktiv:" GridPane.rowIndex="1"
                       GridPane.columnIndex="0"/>
                <CheckBox fx:id="active" GridPane.rowIndex="1"
                          GridPane.columnIndex="1"/>
            </children>
        </GridPane>
    </center>
    <bottom>
        <AnchorPane>
            <HBox alignment="CENTER_RIGHT" spacing="5.0"
                  AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                  AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="5.0">
                <Button text="Abbrechen" onAction="#cancel" cancelButton="true"/>
                <Button fx:id="saveButton" text="Speichern" onAction="#save"
                        defaultButton="true"/>
            </HBox>
        </AnchorPane>
    </bottom>
</BorderPane>

