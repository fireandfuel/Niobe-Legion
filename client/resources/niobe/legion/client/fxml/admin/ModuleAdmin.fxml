<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tooltip?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="niobe.legion.client.gui.admin.ModuleAdminController">
    <HBox fx:id="actions" alignment="CENTER_RIGHT" spacing="5.0"
          AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0">
        <Button fx:id="reloadButton" text="r" onAction="#reloadModules" minHeight="48.0"
                minWidth="48.0" maxHeight="48.0" maxWidth="48.0" prefHeight="48.0"
                prefWidth="48.0">
            <tooltip>
                <Tooltip text="Neu laden"/>
            </tooltip>
        </Button>
    </HBox>
    <TableView fx:id="moduleTable" AnchorPane.topAnchor="55.0"
               AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
               AnchorPane.bottomAnchor="0.0">
    </TableView>
</AnchorPane>

