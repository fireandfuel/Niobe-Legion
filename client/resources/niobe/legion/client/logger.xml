<?xml version="1.0" encoding="UTF-8"?>
<Configuration strict="true" name="LegionClientConfig">
    <Properties>
        <Property name="stdout_file">logs/client/stdout.log</Property>
        <Property name="stderr_file">logs/client/error.log</Property>
        <Property name="recv_file">logs/client/recv.log</Property>
        <Property name="send_file">logs/client/send.log</Property>
        <Property name="tls_file">logs/server/tls.log</Property>
        <Property name="auth_file">logs/client/auth.log</Property>
        <Property name="module_file">logs/client/module.log</Property>
    </Properties>
    <Appenders>
        <Appender type="Console" name="STDOUT">
            <Layout type="PatternLayout">
                <Pattern>%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
            </Layout>
        </Appender>
        <Appender type="Console" name="STDERR">
            <Layout type="PatternLayout">
                <Pattern>%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
            </Layout>
        </Appender>
        <Appender type="File" name="stdout_appender" fileName="${stdout_file}">
            <Layout type="PatternLayout">
                <Pattern>%d %p [%t] %m%n</Pattern>
            </Layout>
        </Appender>
        <Appender type="File" name="stderr_appender" fileName="${stderr_file}">
            <Layout type="PatternLayout">
                <Pattern>%d %p [%t] %m%n</Pattern>
            </Layout>
        </Appender>
        <Appender type="File" name="recv_appender" fileName="${recv_file}">
            <Layout type="PatternLayout">
                <Pattern>%d %p [%t] %m%n</Pattern>
            </Layout>
        </Appender>
        <Appender type="File" name="send_appender" fileName="${send_file}">
            <Layout type="PatternLayout">
                <Pattern>%d %p [%t] %m%n</Pattern>
            </Layout>
        </Appender>
        <Appender type="File" name="tls_appender" fileName="${tls_file}">
            <Layout type="PatternLayout">
                <Pattern>%d %p [%t] %m%n</Pattern>
            </Layout>
        </Appender>
        <Appender type="File" name="auth_appender" fileName="${auth_file}">
            <Layout type="PatternLayout">
                <Pattern>%d %p [%t] %m%n</Pattern>
            </Layout>
        </Appender>
        <Appender type="File" name="module_appender" fileName="${module_file}">
            <Layout type="PatternLayout">
                <Pattern>%d %p [%t] %m%n</Pattern>
            </Layout>
        </Appender>
    </Appenders>
    <Loggers>
        <Logger name="stdout" level="trace" additivity="false">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="stdout_appender"/>
        </Logger>
        <Logger name="stderr" level="error" additivity="false">
            <AppenderRef ref="STDERR"/>
            <AppenderRef ref="stderr_appender"/>
        </Logger>
        <Logger name="recv" level="debug" additivity="false">
            <AppenderRef ref="recv_appender"/>
        </Logger>
        <Logger name="send" level="debug" additivity="false">
            <AppenderRef ref="send_appender"/>
        </Logger>
        <Logger name="tls" level="debug" additivity="false">
            <AppenderRef ref="tls_appender"/>
        </Logger>
        <Logger name="auth" level="debug" additivity="false">
            <AppenderRef ref="auth_appender"/>
        </Logger>
        <Logger name="module" level="debug" additivity="false">
            <AppenderRef ref="module_appender"/>
        </Logger>
        <Root level="off">
        </Root>
    </Loggers>
</Configuration>