<Configuration strict="true" name="LegionClientConfig">
    <Appenders>
        <RollingFile name="std_appender" fileName="logs/client/client.log" filePattern="logs/client/client.%i.log">
            <PatternLayout>
                <pattern>%d %p [%t] %m%n</pattern>
            </PatternLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="100 MB"/>
            </Policies>
        </RollingFile>
        <RollingFile name="error_appender" fileName="logs/client/client_error.log"
                     filePattern="logs/client/client_error.%i.log">
            <PatternLayout type="PatternLayout">
                <pattern>%d %p [%t] %m%n</pattern>
            </PatternLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="100 MB"/>
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="info">
            <appender-ref ref="std_appender" level="info"/>
            <appender-ref ref="error_appender" level="error"/>
        </Root>
    </Loggers>
</Configuration>